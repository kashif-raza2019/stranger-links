doctype
html(lang="en")
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title User Details
        link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
        link(rel='shortcut icon' href='/public/assets/favicon.jpg' type='image/x-icon')
        link(rel='stylesheet' href='/public/css/user.css')

    body
        div.container
            div.userLinkBox(style="text-align: center; text-decoration: none;") 
                a(href="/" title="Home" class="btnDanger" style="text-decoration: none;") Home
                a(href="/intro" title="Home" class="btnDanger" style="text-decoration: none; margin-left: 20px;") Watch Intro
            div.userLinkBox
                h4.user-clicks(style="text-align: center;") Note:
                h6 Only 50 links are allowed per user as a free resource.
                h4(style="text-align: center; color: #F72F2F") - - - - - - - - - - - - - - - - - - -
            each userLinks in userLink
                div.userLinkBox
                    h4.user-short(style="cursor: pointer;" onclick=`location.href='${userLinks.shortUrl}'`) #{userLinks.shortUrl}
                    a(href=`${userLinks.shortUrl}` target="_blank"  class="btn btn-success") Visit
                    a(href=`/api/delete/${userLinks._id}` class="btn btn-danger" style="margin-left: 10px;") Delete
                    h4.user-long Long URL: #{userLinks.longUrl}
                    h4.user-clicks Number of Clicks:  #{userLinks.clicks}
                    h4.user-id User ID:  #{userLinks.userId}
        
        

        
        script function deleteLink(link) {console.log(link);}
